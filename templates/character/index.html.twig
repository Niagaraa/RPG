{% extends 'base.html.twig' %}

{% block title %}Personnages{% endblock %}

{% block body %}

    <div class="container index">

        <div class="icon rounded-circle bg-primary">
            <i class="fas fa-users"></i>
        </div>

        <h1>Personnages</h1>

        <a href="{{ path('character_new') }}" class="btn btn-primary ml-4 mb-4">
            <i class="fas fa-plus mr-2"></i> Ajouter un personnage
        </a>

        <table class="table table-striped table-light">
            <thead>
            <tr>
                <th></th>
                <th>Nom</th>
                <th>Âge</th>
                <th>Forum</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for character in characters %}
                <tr>
                    <td>{{ loop.index }}
                        <img src="{{ character.picture }}" class="avatar">
                    </td>
                    <td>{{ character.name }} <br>
                        {% if character.avatar is not empty %}
{#                            <span class="face-claim">#}
                                ({{ character.avatar }})
{#                            </span>#}
                        {% endif %}
                    </td>
                    <td>{{ character.birthday }}</td>
                    <td>{{ character.forum.name }}</td>
                    <td>
                        <a href="{{ path('character_show', {'id': character.id}) }}">show</a>
                        <a href="{{ path('character_edit', {'id': character.id}) }}" class="m-1 btn btn-primary">
                            <span uk-icon="pencil"></span>
                        </a>
                        {{ include('character/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun personnage ajouté</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
