{% extends 'base.html.twig' %}

{% block title %}Forums{% endblock %}

{% block body %}

    <div class="container index">

        <div class="icon rounded-circle bg-primary">
            <i class="fas fa-book-open"></i>
        </div>

        <h1>Forums</h1>

        <a href="{{ path('forum_new') }}" class="btn btn-primary ml-4 mb-4">
            <i class="fas fa-plus mr-2"></i> Ajouter un forum
        </a>

        <table class="table table-striped table-light">
            <thead>
            <tr>
                <th></th>
                <th>Nom du forum</th>
                <th>URL du forum</th>
                <th>Bouton(s) de partenariat</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for forum in forums %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ forum.name }}</td>
                    <td>{{ forum.address }}</td>
                    <td><img src="{{ forum.button }}"></td>
                    <td class="d-flex">
                        <a href="{{ path('forum_show', {'id': forum.id}) }}" class="m-1">show</a>
                        <a href="{{ path('forum_edit', {'id': forum.id}) }}" class="m-1 btn btn-primary">
                            <span uk-icon="pencil"></span>
                        </a>
                        {{ include('forum/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun forum enregistr√©</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
