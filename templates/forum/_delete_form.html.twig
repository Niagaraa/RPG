<form method="post" action="{{ path('forum_delete', {'id': forum.id}) }}" onsubmit="return confirm('Voulez-vous supprimer ce forum ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ forum.id) }}">
    <button class="btn btn-danger"><span uk-icon="trash"></span></button>
</form>
